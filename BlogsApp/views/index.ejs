<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header">Blogs Site Welcome</div>
    <div class="ui attached top segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div>
                    <div class="image">
                        <img src="<%= blog.image %>" >
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><%=blog.title%></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0, 200) %>...</p>
                        </div>
                        <div class="other">
                            <a class="ui floated basic blue button" href="/blogs/<%= blog._id %>"> 
                                ENTER 
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>


<% include partials/footer %>